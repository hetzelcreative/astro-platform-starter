---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You - Company Name">
    <div class="container mx-auto px-6 py-20">
        <div class="max-w-2xl mx-auto text-center">
            <div class="mb-8">
                <svg class="w-24 h-24 mx-auto text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>

            <h1 class="text-4xl md:text-5xl font-black text-black mb-6">
                Thank You!
            </h1>

            <p class="text-xl text-gray-700 mb-8">
                We've received your message and will get back to you within 24 hours.
            </p>

            <div class="space-y-4">
                <p class="text-gray-600">
                    Need immediate assistance? Call us at <a href="tel:5551234567" class="text-orange-500 font-bold hover:text-orange-600">(555) 123-4567</a>
                </p>

                <div class="pt-8">
                    <a href="/" class="inline-flex items-center justify-center bg-orange-500 text-white px-8 py-3 font-bold uppercase tracking-wide hover:bg-orange-600 transition-colors shadow-lg rounded no-underline">
                        Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>
