<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
        <div class="max-w-2xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-4xl md:text-5xl font-black text-black mb-4">Get Your Free Estimate</h2>
                <p class="text-xl text-gray-700">
                    Fill out the form below and we'll get back to you within 24 hours.
                </p>
            </div>

            <form
                name="contact"
                method="POST"
                data-netlify="true"
                data-netlify-honeypot="bot-field"
                action="/thank-you"
                class="bg-white rounded-lg shadow-lg p-8"
            >
                <!-- Hidden fields for Netlify Forms -->
                <input type="hidden" name="form-name" value="contact" />

                <!-- Honeypot for spam prevention -->
                <p class="hidden">
                    <label>
                        Don't fill this out if you're human: <input name="bot-field" />
                    </label>
                </p>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <!-- Name -->
                    <div>
                        <label for="name" class="block text-sm font-bold text-gray-700 mb-2">
                            Full Name <span class="text-orange-500">*</span>
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded focus:border-orange-500 focus:outline-none transition-colors"
                            placeholder="John Smith"
                        />
                    </div>

                    <!-- Phone -->
                    <div>
                        <label for="phone" class="block text-sm font-bold text-gray-700 mb-2">
                            Phone Number <span class="text-orange-500">*</span>
                        </label>
                        <input
                            type="tel"
                            id="phone"
                            name="phone"
                            required
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded focus:border-orange-500 focus:outline-none transition-colors"
                            placeholder="(555) 123-4567"
                        />
                    </div>
                </div>

                <!-- Email -->
                <div class="mb-6">
                    <label for="email" class="block text-sm font-bold text-gray-700 mb-2">
                        Email Address <span class="text-orange-500">*</span>
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded focus:border-orange-500 focus:outline-none transition-colors"
                        placeholder="john@example.com"
                    />
                </div>

                <!-- Service Type -->
                <div class="mb-6">
                    <label for="service" class="block text-sm font-bold text-gray-700 mb-2">
                        Service Needed
                    </label>
                    <select
                        id="service"
                        name="service"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded focus:border-orange-500 focus:outline-none transition-colors"
                    >
                        <option value="">Select a service...</option>
                        <option value="Residential Services">Residential Services</option>
                        <option value="Commercial Services">Commercial Services</option>
                        <option value="Emergency Repairs">Emergency Repairs</option>
                        <option value="Maintenance Plans">Maintenance Plans</option>
                        <option value="Inspection/Estimate">Inspection/Estimate</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <!-- Message -->
                <div class="mb-6">
                    <label for="message" class="block text-sm font-bold text-gray-700 mb-2">
                        Project Details <span class="text-orange-500">*</span>
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        required
                        rows="5"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded focus:border-orange-500 focus:outline-none transition-colors"
                        placeholder="Tell us about your project..."
                    ></textarea>
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    class="w-full bg-orange-500 text-white px-8 py-4 font-bold text-lg uppercase tracking-wide hover:bg-orange-600 transition-colors shadow-lg rounded"
                >
                    Send Message
                </button>

                <p class="text-sm text-gray-600 mt-4 text-center">
                    We respect your privacy. Your information will never be shared.
                </p>
            </form>
        </div>
    </div>
</section>
